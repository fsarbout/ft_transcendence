{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/src/*": ["src/*"],
      "@/pages/*": ["pages/*"],
      "@/components/*": ["src/components/*"],
      "@/layout/*": ["src/layout/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/images/*": ["public/images/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "pages/game/index.tsx", "pages/game/[id].tsx", "pages/.game.tsx", "src/components/.Canvas.tsx"],
  "exclude": ["node_modules"]
}
